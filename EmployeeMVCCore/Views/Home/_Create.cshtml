@model EmployeeMVCCore.Models.Employee

    <form id="formEmployee" asp-action="Create" asp-controller="Home" method="post">
        @Html.AntiForgeryToken()

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add New Client</h4>
        </div>

        <div class="modal-body">

            <div class="form-horizontal">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input id="FirstName" asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input id="LastName" asp-for="LastName" class="form-control" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <textarea id="Address" asp-for="Address" class="form-control" placeholder="Address" cols="80" rows="5"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" id="btnCreate" class="btn btn-success">Create</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </form>



